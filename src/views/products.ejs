<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- ICONO DE LA PESTAÃ‘A (LOGUITO) -->
    <link rel="icon" href="/images/GalagaShip.png">
    <!-- CSS -->
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/products.css" />
    <!-- FONTS -->
     <link rel="preconnect" href="https://fonts.googleapis.com">
     <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
     <link href="https://fonts.googleapis.com/css2?family=Orbitron&display=swap" rel="stylesheet">
     <link href="https://fonts.googleapis.com/css2?family=Press+Start+2P&display=swap" rel="stylesheet">
  
     <title>Products</title>
</head>

<body>
    <%- include("./partials/header",{titulo:"home"}) %>
    <main>
        <h1 class="title">List Of Our Best Products</h1>
    <div class="products">
    <% products.forEach(product=> { %>
        <div class="product">
        <a href="products/<%= product.id %>" class="productName">
        <h4><%= product.name %></h4>
        <div class="imgProduct">
        <img src="/images/<%=product.image%>">
    </div>
    </a>
</div>
        <% }); %>
    </div>
    <h1><a href="/products/create">Create Product</a></h1>
</main>
</body>
</html>